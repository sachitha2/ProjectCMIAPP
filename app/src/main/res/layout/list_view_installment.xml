<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="ID:2500"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtPaymentHead"
        tools:text="Total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="55dp" />

    <TextView
        android:id="@+id/txtDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due Date 2019/11/20"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtCID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CID : 250"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtNIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIC : 983142044V"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtAreaHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/txtArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Galgamuwa"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25dp" />
</LinearLayout>