<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DownloadData">







        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"

        >


        <TextView
        android:id="@+id/txtDeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp" />

        <TextView
        android:id="@+id/txtInstallments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp" />

        <TextView
        android:id="@+id/txtArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp" />

        <TextView
        android:id="@+id/txtCustomers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp" />

            <TextView
                android:id="@+id/txtCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="25sp" />
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"

                >

                <Button
                    android:id="@+id/SelectBTBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blutooth"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/btnUpload"

                    />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Upload Data"
                    android:textColor="#000"
                    app:layout_constraintBottom_toTopOf="@+id/btnDownloadData"
                    android:layout_margin="10dp"
                    />
                <Button
                    android:id="@+id/btnDownloadData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Download Data"
                    android:textColor="#000"
                    app:layout_constraintBottom_toTopOf="@+id/btnBlue"
                    android:layout_margin="10dp"
                    />

                <Button
                    android:id="@+id/btnBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Bluetooth Settings"
                    android:textColor="#000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>
        </LinearLayout>







</android.support.constraint.ConstraintLayout>